</head>

<body>

    <!-- Pre- Loader Start -->
    <div class="loader_bg">
        <div class="loader">
        </div>
    </div>

    {{>navbar}}


    <div class="container-fluid main_header">
        <div class="row" ">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row" id="row">
                    <!-- Left side Header  -->
                    <div class="col-md-6 col-12 main_header_left">
                        <p id="res-home-p">Welcome To Whether App</p>
                        <!-- <h1>Get the latest <span class="texr-clr">Whether </span> news of your City.</h1> -->
                        <!-- ...................... -->
                        <h1 id="up_hed">Get the latest </h1>
                        <div class="waveTextAnimated">
                            <span>W</span>
                            <span>H</span>
                            <span>E</span>
                            <span>T</span>
                            <span>H</span>
                            <span>E</span>
