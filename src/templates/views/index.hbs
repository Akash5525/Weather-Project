                        </div>
                        <h1 id="down_hed">news of your City.</h1>
                        <!-- ...................... -->
                        <a href="/whether" id="responsive-btn"><button>Check Here</button></a>
                    </div>
                    <!-- Right side Header  -->
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="w-75" src="./images/bg 1.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-75" src="./images/bg 2.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-75" src="./images/bg 3.jpg" alt="Third slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-75" src="./images/bg 4.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    {{>footer}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
